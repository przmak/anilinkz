{
  "name": "Anilinkz Adds Blocker",
  "version": "0.2",
  "description": "Removes crap from the website.",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "storage",
    "activeTab",
    "contentSettings",
    "management"
  ],
  "background": {
    "scripts": ["install.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://aniwatcher.com/*"
      ],
      "run_at": "document_start",
      "css": [
        "styles.css"
      ]
    },
    {
      "matches": [
        "https://aniwatcher.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "./libs/jquery3.4.1.min.js",
        "anilinkz.js"
      ],
      "match_about_blank": true
    },
    {
      "matches": [
        "https://vidstreaming.io/*"
      ],
      "run_at": "document_start",
      "js": [
        "./utility/remove-iframes.js",
        "./utility/remove-scripts.js",
        "./libs/jquery3.4.1.min.js",
        "./vdo_sites/vidstreaming/main.js"
      ],
      "css": [
        "./vdo_sites/vidstreaming/main.css"
      ]
    }
  ],
  "page_action": {
    "default_popup": "commands.html",
    "default_icon": {
      "16": "images/remove-content.png",
      "32": "images/remove-content.png",
      "48": "images/remove-content.png",
      "128": "images/remove-content.png"
    }
  },
  "icons": {
    "16": "images/remove-content.png",
    "32": "images/remove-content.png",
    "48": "images/remove-content.png",
    "128": "images/remove-content.png"
  }
}